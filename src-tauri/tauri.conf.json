{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Companion Chat",
  "version": "0.5.0-beta",
  "identifier": "com.rony.companion-chat",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Companion Chat",
        "width": 800,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "skipTaskbar": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": [
      "deb"
    ],
    "linux": {
      "deb": {
        "files": {
          "/usr/share/doc/companion-chat/postinst": "deb/postinst",
          "/usr/share/doc/companion-chat/prerm": "deb/prerm"
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}